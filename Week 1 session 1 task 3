<body>
  <div class="container">
    <h1>JavaScript Operators Demo</h1>
    <p>Click below to see examples of all operator types.</p>
    <button onclick="showOperators()">Run Script</button>
    <pre id="output"></pre>
  </div>

  <script>
    function showOperators() {
      let output = "";

    
      let a = 10, b = 3;
      output += "=== Arithmetic Operators ===\n";
      output += `a + b = ${a + b}\n`;
      output += `a - b = ${a - b}\n`;
      output += `a * b = ${a * b}\n`;
      output += `a / b = ${a / b}\n`;
      output += `a % b = ${a % b}\n\n`;

      
      let x = 5;
      x += 3; // same as x = x + 3
      output += "=== Assignment Operator ===\n";
      output += `x += 3 → x = ${x}\n\n`;

      
      let p = 10, q = 20;
      output += "=== Relational Operators ===\n";
      output += `p == q → ${p == q}\n`;
      output += `p != q → ${p != q}\n`;
      output += `p > q → ${p > q}\n`;
      output += `p < q → ${p < q}\n`;
      output += `p >= 10 → ${p >= 10}\n`;
      output += `q <= 15 → ${q <= 15}\n\n`;

      
      let cond1 = true, cond2 = false;
      output += "=== Logical Operators ===\n";
      output += `cond1 && cond2 → ${cond1 && cond2}\n`;
      output += `cond1 || cond2 → ${cond1 || cond2}\n`;
      output += `!cond1 → ${!cond1}\n\n`;

      
      let age = 18;
      let result = (age >= 18) ? "Eligible to Vote" : "Not Eligible";
      output += "=== Conditional (Ternary) Operator ===\n";
      output += `Age = ${age}, Result → ${result}\n\n`;

      
      let m = 5, n = 1;
      output += "=== Bitwise Operators ===\n";
      output += `m & n = ${m & n}\n`;
      output += `m | n = ${m | n}\n`;
      output += `m ^ n = ${m ^ n}\n`;
      output += `m << 1 = ${m << 1}\n`;
      output += `m >> 1 = ${m >> 1}\n\n`;

      
      let num = 10;
      output += "=== Increment & Decrement ===\n";
      output += `num++ = ${num++} (after increment → ${num})\n`;
      output += `++num = ${++num}\n`;
      output += `num-- = ${num--} (after decrement → ${num})\n`;
      output += `--num = ${--num}\n`;

      
      document.getElementById("output").textContent = output;
      console.log(output);
    }
  </script>
</body>
</html>
