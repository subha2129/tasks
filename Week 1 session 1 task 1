  <div class="container">
    <h1>JavaScript Variable Example</h1>
    <p>Open the <strong>Console</strong> (Press F12 → Console tab) to see the output.</p>
    <button onclick="showVariables()">Run Program</button>
  </div>

  <script>
    function showVariables() {
      
      var name = "Subha";
      console.log("Using var:", name);
      name = "Subha Devi";
      console.log("Modified var:", name);

      
      let age = 20;
      console.log("Using let:", age);
      age = 21;
      console.log("Modified let:", age);

    
      const country = "India";
      console.log("Using const:", country);

      console.log("✅ Program finished successfully!");
    }
  </script>
